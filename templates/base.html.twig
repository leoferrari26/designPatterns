<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <style>
        .drawer {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #ffffff;
            color: white;
            transition: left 0.3s ease-in-out;
            z-index: 1050;
            box-shadow: 4px 0 8px rgba(0, 0, 0, 0.1);
        }

        .drawer.open {
            left: 0;
        }

        .drawer-header {
            padding: 10px;
            font-size: 1rem;
            background-color: #ffffff;
            text-align: right;
            font-weight: bold;
        }

        .drawer .nav-link {
            color: white;
            font-size: 1.1rem;
            padding: 15px 20px;
            border-bottom: 1px solid #495057;
        }

        .drawer .nav-link:hover {
            background-color: #007bff;
        }

        .drawer .submenu {
            display: none;
            padding-left: 20px;
            background-color: #343a40;
        }

        .drawer .submenu.open {
            display: block;
        }

        .drawer-toggle {
            position: fixed;
            top: 20px;
            left: 20px;
            background-color: #ffffff;
            border: none;
            color: gray;
            font-size: 24px;
            z-index: 1100;
        }

        body {
            transition: margin-left 0.3s ease;
        }

        body.drawer-open {
            margin-left: 250px;
        }

        .container {
            padding: 30px;
        }
    </style>
</head>

<body class="drawer-open">


    <button id="buttonDrawer" class="d-none btn btn-light drawer-toggle" onclick="toggleDrawer()">☰</button>

    <div class="drawer open" id="drawer">
        <div class="drawer-header">
            <button class="btn btn-light" onclick="toggleDrawer()">✕</button>
        </div>

        <ul class="list-unstyled ps-0">
            <li class="mb-2">
                <button class="mb-2 btn btn-light btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#criacional-collapse" aria-expanded="false">
                    Criacional
                </button>
                <div class="collapse" id="criacional-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-2 small">
                        <li style="margin-left: 20%;"><a href="{{ path('app_home_method_factory') }}" class="list-group-item list-group-item-action" style="color: black;">Factory Method</a></li>
                    </ul>
                </div>
            </li>

            <li class="mb-2">
                <button class="mb-2 btn btn-light btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#estrutural-collapse" aria-expanded="false">
                    Estrutural
                </button>
                <div class="collapse" id="estrutural-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-2 small">
                        <li style="margin-left: 20%;"><a href="{{ path('app_bridge') }}" class="list-group-item list-group-item-action" style="color: black;">Bridge</a></li>
                    </ul>
                </div>
            </li>

            <li class="mb-2">
                <button class="mb-2 btn btn-light btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#comportamental-collapse" aria-expanded="false">
                    Comportamental
                </button>
                <div class="collapse" id="comportamental-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-2 small">
                        <li style="margin-left: 20%;"><a href="{{ path('app_template_method') }}" class="list-group-item list-group-item-action" style="color: black;">Template Method</a></li>
                    </ul>
                </div>
            </li>

        </ul>
    </div>

    {% block body %}
    {% endblock %}

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        function toggleDrawer() {
            var drawer = document.getElementById('drawer');
            var buttonDrawer = document.getElementById('buttonDrawer');
            buttonDrawer.classList.toggle('d-none');

            var body = document.body;
            drawer.classList.toggle('open');
            body.classList.toggle('drawer-open');
        }

        document.querySelectorAll('.nav-link').forEach(function(link) {
            link.addEventListener('click', function(event) {
                var submenu = this.nextElementSibling;
                if (submenu && submenu.classList.contains('submenu')) {
                    submenu.classList.toggle('open');
                    event.preventDefault();
                }
            });
        });
    </script>

</body>
</html>
