
{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-5">Controle Remoto</h1>

        <div class="d-flex justify-content-center mb-4">
            <button class="btn btn-outline-primary me-2" onclick="changeDevice('tv')">TV</button>
            <button class="btn btn-outline-success" onclick="changeDevice('radio')">RÃ¡dio</button>
        </div>

        <div class="card p-4 shadow">
            <h3 class="text-center">{{ device|capitalize }}</h3>
            <p>Status: <strong>{{ power }}</strong></p>
            <p>Volume: <strong>{{ volume }}</strong></p>
            <p>Canal: <strong>{{ channel }}</strong></p>

            <div class="d-flex flex-wrap gap-2">
                <a href="?device={{ device }}&action=togglePower" class="btn btn-danger">Ligar/Desligar</a>
                <a href="?device={{ device }}&action=volumeUp" class="btn btn-primary">Volume +</a>
                <a href="?device={{ device }}&action=volumeDown" class="btn btn-primary">Volume -</a>
                <a href="?device={{ device }}&action=channelUp" class="btn btn-secondary">Canal +</a>
                <a href="?device={{ device }}&action=channelDown" class="btn btn-secondary">Canal -</a>
            </div>
        </div>
    </div>
    <script>
        function changeDevice(device) {
            window.location.href = '?device=' + device;
        }
    </script>
{% endblock %}

